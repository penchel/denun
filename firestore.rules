rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funções auxiliares
    function getUserData() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data;
    }
    
    function isAgente() {
      return getUserData().papel == 'agente';
    }
    
    function isAdmin() {
      return getUserData().papel == 'admin';
    }

    // Regras para a coleção de usuários
    match /usuarios/{userId} {
      // Permite que usuários autenticados leiam apenas seus próprios dados
      // Admin e Agente podem ler dados de outros usuários (opcional, mas útil para gestão)
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin() || isAgente());
      
      // Permite que usuários autenticados criem/atualizem apenas seus próprios dados
      allow create, update: if request.auth != null && request.auth.uid == userId;
      
      // Não permite deletar (pode adicionar regra específica se necessário)
      allow delete: if false;
    }
    
    // Regras para denúncias
    match /denuncias/{denunciaId} {
      // Qualquer usuário autenticado pode ler denúncias
      allow read: if request.auth != null;
      
      // Qualquer usuário autenticado pode criar denúncias
      // O autorId deve ser o UID do usuário autenticado
      allow create: if request.auth != null && 
                     request.resource.data.autorId == request.auth.uid;
      
      // Atualização:
      // - Autor pode atualizar (se for sua denúncia)
      // - Agente pode atualizar (para mudar status)
      // - Admin pode atualizar (qualquer campo)
      allow update: if request.auth != null && 
                     (resource.data.autorId == request.auth.uid || isAgente() || isAdmin());
      
      // Deleção:
      // - Apenas Admin pode deletar
      allow delete: if request.auth != null && isAdmin();
    }
    
    // Bloqueia acesso a qualquer outra coleção por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


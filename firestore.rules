rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção de usuários
    match /usuarios/{userId} {
      // Permite que usuários autenticados leiam apenas seus próprios dados
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Permite que usuários autenticados criem/atualizem apenas seus próprios dados
      allow create, update: if request.auth != null && request.auth.uid == userId;
      
      // Não permite deletar (pode adicionar regra específica se necessário)
      allow delete: if false;
    }
    
    // Regras para denúncias
    match /denuncias/{denunciaId} {
      // Qualquer usuário autenticado pode ler denúncias
      allow read: if request.auth != null;
      
      // Qualquer usuário autenticado pode criar denúncias
      // O autorId deve ser o UID do usuário autenticado
      allow create: if request.auth != null && 
                     request.resource.data.autorId == request.auth.uid;
      
      // Apenas o autor pode atualizar sua própria denúncia
      allow update: if request.auth != null && 
                     resource.data.autorId == request.auth.uid;
      
      // Apenas o autor pode deletar sua própria denúncia
      allow delete: if request.auth != null && 
                     resource.data.autorId == request.auth.uid;
    }
    
    // Bloqueia acesso a qualquer outra coleção por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

